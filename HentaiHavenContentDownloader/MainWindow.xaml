<Window x:Class="HentaiHavenContentDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HentaiHavenContentDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox x:Name="comboBox_series" SelectionChanged="ComboBox_series_SelectionChanged"/>
            <Label x:Name="label_name" Height="32" FontSize="11" VerticalAlignment="Center"/>
            <Label x:Name="label_des" Height="32" FontSize="11"  VerticalAlignment="Center"/>
            <Image x:Name="image_cover" Width="300" Height="300"/>
        </StackPanel>
    </Grid>
</Window>
